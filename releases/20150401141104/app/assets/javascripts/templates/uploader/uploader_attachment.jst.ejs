<div class="<%= wrapper_class %>" id="<%= index %>">

    <i class="icon-file"> <%= name %> <%= size %></i>
    <button class="close abort_xhr remove-button" style="padding-left: 5px;">&times;</button>

    <% $.each(inputs, function(key, input){ %>
        <input type="hidden" name="<%= input.name %>" value="<%= input.value %>" class="<%= input.class %>"/>
    <% }) %>

</div>